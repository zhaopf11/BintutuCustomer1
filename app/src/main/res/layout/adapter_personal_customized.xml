<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_bar_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/ui_margin_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_370"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/customized" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_customized"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/navigation_bar_edit_margin"
        android:layout_marginTop="@dimen/ui_margin_20"
        android:ellipsize="end"
        android:lines="2"
        android:maxLines="2"
        android:text="明星同款简约一字扣凉鞋"
        android:textColor="@color/gray3"
        android:textSize="@dimen/font_26" />

    <TextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ui_margin_20"
        android:text="议价"
        android:textColor="@color/font_orange"
        android:textSize="@dimen/font_26" />


</LinearLayout>
