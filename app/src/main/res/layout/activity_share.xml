<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigation_bar_bg"
    android:orientation="vertical">

    <include layout="@layout/title_noright_common" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/gray_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/navigation_bar_edit_margin"
            android:paddingRight="@dimen/navigation_bar_edit_margin">

            <LinearLayout
                android:id="@+id/lin_qq"
                style="@style/share_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qq_share" />

                <TextView
                    style="@style/share_text"
                    android:text="QQ" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_wechat"
                style="@style/share_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wechat_share" />

                <TextView
                    style="@style/share_text"
                    android:text="微信" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_friend"
                style="@style/share_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/wechat_friend" />

                <TextView
                    style="@style/share_text"
                    android:text="朋友圈" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sina"
                style="@style/share_lin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sina_share" />

                <TextView
                    style="@style/share_text"
                    android:text="微博" />


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/navigation_bar_edit_margin"
            android:paddingRight="@dimen/navigation_bar_edit_margin">

            <TextView
                android:id="@+id/text_erweima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_30"
                android:text="二维码"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/ui_margin_20"
                android:layout_marginRight="@dimen/ui_margin_20"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray_bg"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text_erweima"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/gray_bg"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_erweima"
                />

        </RelativeLayout>



        <ImageView
            android:layout_width="@dimen/ui_370"
            android:layout_height="@dimen/ui_370"
            android:src="@drawable/code"
            android:layout_centerInParent="true"/>


    </RelativeLayout>


</LinearLayout>