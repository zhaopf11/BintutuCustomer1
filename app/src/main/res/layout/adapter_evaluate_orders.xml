<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_220"
        android:layout_marginTop="2px"
        android:background="@color/navigation_bar_bg"
        android:paddingBottom="@dimen/ui_margin_20"
        android:paddingLeft="@dimen/navigation_bar_edit_margin"
        android:paddingRight="@dimen/navigation_bar_edit_margin"
        android:paddingTop="@dimen/ui_margin_20">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_product"
            android:layout_width="@dimen/ui_180"
            android:layout_height="@dimen/ui_180"
            android:src="@drawable/product1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ui_35"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text_productintroduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_26"
                android:text="明星同款简约一字扣" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_productcolor"
                    style="@style/share_text"
                    android:text="颜色：白色"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/text_productsize"
                    style="@style/share_text"
                    android:layout_marginLeft="@dimen/navigation_bar_edit_margin"
                    android:text="尺码：36码"
                    android:textColor="@color/gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
