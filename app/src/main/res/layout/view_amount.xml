<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_amount"
    android:layout_width="@dimen/ui_290"
    android:layout_height="wrap_content"
    android:background="@color/navigation_bar_bg">
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="@dimen/ui_150"
        android:layout_height="@dimen/margin_50"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gray_deep_bg"
        android:inputType="number"
        android:gravity="center"
        android:textSize="@dimen/font_30"
        android:text="1"
        android:textColor="@color/gray3"/>
    <Button
        android:id="@+id/btnDecrease"
        android:layout_width="@dimen/ui_70"
        android:layout_height="@dimen/margin_50"
        android:gravity="center"
        android:background="@drawable/btn_amount_left"
        android:layout_toLeftOf="@+id/etAmount"
        android:text="-"
        android:textSize="@dimen/font_30"
        android:clickable="false"
        android:textColor="@color/gray3"
        />
    <Button
        android:id="@+id/btnIncrease"
        android:layout_width="@dimen/ui_70"
        android:layout_height="@dimen/margin_50"
        android:layout_toRightOf="@+id/etAmount"
        android:gravity="center"
        android:background="@drawable/btn_amount_right"
        android:text="+"
        android:textSize="@dimen/font_30"
        android:textColor="@color/gray3"
        />
</RelativeLayout>
