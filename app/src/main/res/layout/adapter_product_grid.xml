<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigation_bar_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_355"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_productlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_margin_20"
            android:visibility="gone"
            android:src="@drawable/newproduct" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/list_normal"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/navigation_bar_edit_margin"
        android:paddingRight="@dimen/navigation_bar_edit_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_introduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:paddingBottom="@dimen/ui_margin_20"
            android:paddingTop="@dimen/ui_margin_20"
            android:text="明星同款"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_26"
            android:visibility="gone"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/navigation_bar_edit_margin"
        android:paddingRight="@dimen/navigation_bar_edit_margin"
        android:gravity="center_vertical">

        <include layout="@layout/price_common" />

        <!--<TextView-->
            <!--android:id="@+id/text_introduct"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:lines="2"-->
            <!--android:paddingBottom="@dimen/ui_margin_20"-->
            <!--android:paddingTop="@dimen/ui_margin_20"-->
            <!--android:text="明星同款"-->
            <!--android:textColor="@color/gray3"-->
            <!--android:textSize="@dimen/font_26"-->
            <!--android:layout_marginLeft="@dimen/navigation_bar_edit_margin"-->
            <!--android:layout_marginRight="@dimen/navigation_bar_edit_margin"-->
            <!--android:layout_weight="1" />-->

        <TextView
            android:id="@+id/text_beforeprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_26"
            android:textColor="@color/gray"
            android:layout_marginLeft="@dimen/ui_margin_20"
            android:text="￥199.00"
            android:maxLines="1"/>

    </LinearLayout>


</LinearLayout>
