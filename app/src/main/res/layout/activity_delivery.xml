<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">
    <include layout="@layout/title_noright_common" />

    <RelativeLayout
        android:id="@+id/rel_choosecity"
        style="@style/enter_mall_lin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_choosecity"
            style="@style/enter_mall_text"
            android:layout_centerVertical="true"
            android:text="物流公司" />

        <TextView
            android:id="@+id/logistics_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/text_choosecity"
            android:layout_toLeftOf="@+id/img_down"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/down_normal"
            android:drawablePadding="@dimen/ui_margin_20"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_24"
            android:text="请选择物流公司"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <LinearLayout
        style="@style/enter_mall_lin"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            style="@style/enter_mall_text"
            android:text="物流单号" />

        <EditText
            android:id="@+id/logistics_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/navigation_bar_bg"
            android:gravity="center_vertical"
            android:hint="请输入物流单号"
            android:inputType="textEmailAddress"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_24"
            />
    </LinearLayout>
</LinearLayout>  