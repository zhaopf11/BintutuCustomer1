<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/title_noright_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2px"
        android:background="@color/navigation_bar_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ui_110"
        android:paddingTop="@dimen/ui_110">


        <TextView
            android:id="@+id/text_successmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已成功支付199.00元"
            android:textColor="@color/color_d2ba91"
            android:textSize="@dimen/font_36" />

        <TextView
            android:id="@+id/text_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navigation_bar_edit_margin"
            android:text="商家将尽快为您发货"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_88"
        android:layout_marginTop="2px"
        android:background="@color/navigation_bar_bg">

        <LinearLayout
            android:id="@+id/lin_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <TextView
                android:id="@+id/text_orders"
                android:layout_width="@dimen/ui_160"
                android:layout_height="@dimen/margin_50"
                android:background="@drawable/gray_deep_corner_bg"
                android:gravity="center"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_26"
                android:text="查看订单"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center">

            <TextView
                android:id="@+id/text_home"
                android:layout_width="@dimen/ui_160"
                android:layout_height="@dimen/margin_50"
                android:background="@drawable/gray_deep_corner_bg"
                android:gravity="center"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_26"
                android:text="返回首页"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>  