<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CustomDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/navigation_bar_bg"
        android:orientation="vertical"
        android:paddingTop="@dimen/ui_80">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ui_80">
            <LinearLayout
                android:id="@+id/lin_qqshare"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_share_qq"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:text="QQ"
                    android:textSize="@dimen/font_24"
                    android:layout_marginTop="@dimen/ui_margin_20"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_wechatshare"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_share_wechat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:text="微信"
                    android:textSize="@dimen/font_24"
                    android:layout_marginTop="@dimen/ui_margin_20"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_friendshare"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_share_friend"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:text="朋友圈"
                    android:textSize="@dimen/font_24"
                    android:layout_marginTop="@dimen/ui_margin_20"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_sinashare"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_share_sina"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray3"
                    android:text="微博"
                    android:textSize="@dimen/font_24"
                    android:layout_marginTop="@dimen/ui_margin_20"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/gray_bg"/>

        <Button
            android:id="@+id/btn_dismiss"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_88"
            android:textColor="@color/gray3"
            android:background="@color/navigation_bar_bg"
            android:text="取消"
            android:textSize="@dimen/font_30"/>


    </LinearLayout>

</RelativeLayout>
